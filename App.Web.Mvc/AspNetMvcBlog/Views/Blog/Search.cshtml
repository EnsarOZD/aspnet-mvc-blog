@{
	Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title>Revolve - Personal Magazine blog Template</title>
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<style>
		.cardsDiv{
			display: flex;
			justify-content: center;
			align-items: center;
			margin:50px;
			
			
		}
		.card{
			margin-left:20px;
			text-align:center
		}
		

		
	</style>
</head>

<body>
	@Html.Partial("_PartialviewInsideMenu")

	<div class="search-wrap">
		<div class="overlay">
			<form action="#" class="search-form">
				<div class="container">
					<div class="row">
						<div class="col-md-10 col-9">
							<input type="text" class="form-control" placeholder="Search..." />
						</div>
						<div class="col-md-2 col-3 text-right">
							<div class="search_toggle toggle-wrap d-inline-block">
								<i class="ti-close"></i>
							</div>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
	<!--search overlay end-->
	<div class="cardsDiv">

		<div class="card" style="width: 18rem;">
			<img class="card-img-top" src="~/images/Blog.jpg" alt="Card image cap">
			<div class="card-body">
				<h5 class="card-title">Blog 1</h5>
				<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
				<a href="#" class="btn btn-primary">Go somewhere</a>
			</div>
		</div>

		<div class="card" style="width: 18rem;">
			<img class="card-img-top" src="~/images/Blog2.jpeg" alt="Card image cap">
			<div class="card-body">
				<h5 class="card-title">Blog 2</h5>
				<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
				<a href="#" class="btn btn-primary">Go somewhere</a>
			</div>
		</div>

		<div class="card" style="width: 18rem;">
			<img class="card-img-top" src="~/images/Blog3.jpg" alt="Card image cap">
			<div class="card-body">
				<h5 class="card-title">Blog 3</h5>
				<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
				<a href="#" class="btn btn-primary">Go somewhere</a>
			</div>
		</div>

	</div>
	
	<div>
		@Html.Partial("_PartialviewInsideSubscribe")
	</div>
	

</body>
